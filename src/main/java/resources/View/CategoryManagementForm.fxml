   <children>
      <Button fx:id="accessSelectedCategoryBtn" layoutX="560.0" layoutY="218.0" mnemonicParsing="false" onAction="#accessSelectedCategory" prefHeight="36.0" prefWidth="158.0" text="Access selected category" />
